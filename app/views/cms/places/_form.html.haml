= form_for @cms_place do |f|
  - if @cms_place.errors.any?
    #error_explanation
      %h2= "#{pluralize(@cms_place.errors.count, "error")} prohibited this cms_place from being saved:"
      %ul
        - @cms_place.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save'
