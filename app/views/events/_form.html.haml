= form_for @event do |f|
  - if @event.errors.any?
    #error_explanation
      %h2= "#{pluralize(@event.errors.count, "error")} prohibited this event from being saved:"
      %ul
        - @event.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :date
    = f.datetime_select :date
  .field
    = f.label :place_id
    = f.number_field :place_id
  .field
    = f.label :cover
    = f.number_field :cover
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
